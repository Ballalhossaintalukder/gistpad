{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "outDir": "out",
    "lib": ["ES2018", "DOM"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "@abstractions/*": ["src/abstractions/node/*"]
    }
  }
}
